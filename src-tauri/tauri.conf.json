{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "winter-arc",
  "version": "0.1.0",
  "identifier": "com.winterarc.app",
  "build": {
    "frontendDist": "../src-ui",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "Jan 2026: Winter Arc",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,
        "backgroundColor": "#050505"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
